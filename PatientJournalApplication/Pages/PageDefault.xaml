<Page x:Class="PatientJournalApplication.Pages.PageDefault"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PatientJournalApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageDefault">

    <StackPanel Orientation="Horizontal" >
        <StackPanel Orientation="Vertical" Width="100" VerticalAlignment="Stretch" HorizontalAlignment="Left" Background="LightBlue">
            <Button Name="BtnPatient" Content="Patients" Click="BtnPatient_Click" Margin="0,0,0,2"></Button>
        </StackPanel>
        <Frame Name="ContentFrame" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="1">
            
        </Frame>
    </StackPanel>
</Page>
