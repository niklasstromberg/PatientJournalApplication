<Page x:Class="PatientJournalApplication.Pages.PageJournal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PatientJournalApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageJournal">

    <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Vertical" Width="645">
            <TextBox Name="TBXInputText" Height="200" ClipToBounds="True" VerticalAlignment="Top"/>
            <StackPanel Orientation="Horizontal" Height="50" Width="auto" HorizontalAlignment="Right">
                <Button Name="CancelJournal" Content ="Cancel" Width="50" Margin="0,0,5,0" Click="CancelJournal_Click"/>
                <Button Name="SaveJournal" Content="Save" Width="50" Click="SaveJournal_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
